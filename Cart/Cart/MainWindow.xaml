        mc:Ignorable="d"
        Title="MainWindow" Height="461.645" Width="862.325" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="169*"/>
        </Grid.RowDefinitions>
